{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"types": ["vitest/globals", "node"],
		"composite": true,
		"lib": ["ESNext"],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"emitDeclarationOnly": true,
		"strict": true,
		"incremental": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
